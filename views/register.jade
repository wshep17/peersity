doctype html
html(lang='en')
  head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Bootstrap CSS
  link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js')

  link(href='/stylesheets/style.css', rel='stylesheet')

  link(href='https://fonts.googleapis.com/css?family=Lobster', rel='stylesheet')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')

  title Peersity

  //Background Look
  link(href='/stylesheets/background.css', rel='stylesheet')

  body
    nav.navbar.sticky-top.navbar-expand-md.bg-dark.navbar-dark
          a.navbar-brand(href='/', class="w3-lobster") Peersity
          button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNavDropdown', aria-controls='navbarNavDropdown', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
          #navbarNavDropdown.navbar-collapse.collapse
            div.mr-auto(style="width: 300px;")
              ul.navbar-nav
                li
                  a.nav-link(href='/',style="padding-left: 20px") Home
                li
                  a.nav-link(href='/overview',style="padding-left: 20px") Overview

                if user
                  if user.isAdmin
                    li
                      a.nav-link(href='/admin',style="padding-left: 20px") Admin
                if !user
                  li
                    a.nav-link(href='/users/register',style="padding-left: 20px") Register
            ul.navbar-nav
              li
                a.fa.fa-instagram(href='https://www.instagram.com/peersity_/')
              li
                a.fa.fa-twitter(href='https://twitter.com/peersity')


    .card.border-0.middle.shadow-lg.p-3.mb-5.rounded(style='width: 18rem;')
      div(class="logo_padding")
        img.card-img-top(src='/stylesheets/Peersity_Logo.png', alt='...')
      ul.list-group.list-group-flush
        form(method='post', action='/users/register',enctype='multipart/form-data')

          div(class="padding")
            .form-group
              input.form-control(name='name', type='text', placeholder='Name', style="border-radius: 25px;")

          div(class="padding")
            .form-group
              input.form-control(name='email', type='email', placeholder='Email', style="border-radius: 25px;")

          div(class="padding")
            .form-group
              input.form-control(name='username', type='text', placeholder='Username', style="border-radius: 25px;")

          div(class="padding")
            .form-group
              input.form-control(name='password', type='password', placeholder='Password', style="border-radius: 25px;")
          div(class="padding")
            .form-group
              input.form-control(name='password2', type='password', placeholder='Confirm Password', style="border-radius: 25px;")
            input.btn.btn-primary.loginbutton_attributes(type='submit', name='submit',value='Submit', style="width: 200px")

      .container
      != messages()
      block content
